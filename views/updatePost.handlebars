<div class="card">
    <div class="card-header"><header>Create New Post</header></div>
    <form class="form update-form">
        <div class="form-group">
            <label for="title">Title:</label>
            <input class="form-input" type="text" id="title" value="{{post.title}}"/>
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea class="form-input" id="content" rows="5" cols="40">{{post.content}}</textarea>
        </div>
        <div class="form-group btn-group">
            <button type="submit" class="btn" id="updateBtn">Update</button>
            <button type="button" class="btn" id="deleteBtn">Delete</button>
        </div>
    </form>
</div>
<script src="/js/update.js"></script>